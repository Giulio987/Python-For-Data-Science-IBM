class analysedText(object):
    
    def __init__ (self, text):
        formatted = text.lower()
        self.fmtText = formatted.replace('.',"").replace("!","").replace("?","").replace(",","")
    
    def freqAll(self):    

        # TODO: Split the text into a list of words  
        word = self.fmtText.split(" ")
        # TODO: Create a dictionary with the unique words in the text as keys
        diction = {}
        unique_set = set(word)
        for unique_word in unique_set:
            diction[unique_word] = word.count(unique_word)
        return diction
    
    def freqOf(self, word):
        diction = self.freqAll()
        if word in diction:
            return diction[word]
        else:
            return 0
        


